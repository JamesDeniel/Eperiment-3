#include <iostream>
#include <conio.h>


using namespace std;
int main()
{

	int a[7], b[7], c[7];
  	int i,j;


	 for ( i = 1; i<8; i++ )
	 {
	 	cout << "Enter the Temperature for province A for day " << i << " : ";
    	        cin >> a[i];
  	}

	 for ( i = 1 ; i < 8; i++ )
    {
	 	cout << "Enter the Temperature for province B for day " << i << " : ";
    	        cin >> b[i];
  	}

  	 for ( i = 1; i < 8; i++ )
    {
	 	cout << "Enter the Temperature for province C for day " << i << " : ";
    	        cin >> c[i];
  	}


 	for (j = 1; j < 8; j++)
  	{
    	       cout << "Province A, Day " << j << " = " << a[j] << " Degrees C" << endl;
  	}

    for (j = 1; j < 8; j++ )
  	{
    	       cout << "Province B, Day " << j << " = " << b[j] << " Degrees C" << endl;
  	}
  	for (j = 1; j <8; j++ )
  	{
    	       cout << "Province C, Day " << j << " = " << c[j] << " Degrees C" << endl;
  	}


  	_getch();
	return 0;
}
