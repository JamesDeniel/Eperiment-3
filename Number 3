#include<iostream>
#include <conio.h>

using namespace std;

int main()
{
    char c[10];
    int a , i;

    cout << "Enter the amount of Character: ";
    cin >> a;

    cout << "Enter the" << a << " characters that you want: ";

    for (i = 0 ; i < a ; i++)
        {

        cin >> c[i];

        }

        cout<< "The reverse order is: ";

    for (i = a ; i > 0 ; i--)
    {

        cout<< c[i-1]<<" ";

    }

    _getch();
    return 0;
}
